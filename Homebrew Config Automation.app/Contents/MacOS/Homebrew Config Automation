#!/bin/bash
#
# Homebrew Config Automation - Application Bundle Wrapper
# This wrapper executable calls the installed brew-config.sh script
#

# Get the installed script path
SCRIPT_PATH="${HOME}/bin/brew-config.sh"

# Check if script exists
if [[ ! -f "${SCRIPT_PATH}" ]]; then
    echo "ERROR: brew-config.sh not found at ${SCRIPT_PATH}" >&2
    echo "Please run install.sh to install the script first." >&2
    exit 1
fi

# Execute the script with all arguments
exec "${SCRIPT_PATH}" "$@"
