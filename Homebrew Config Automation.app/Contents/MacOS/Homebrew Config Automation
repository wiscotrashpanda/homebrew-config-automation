#!/bin/bash
#
# Homebrew Config Automation Wrapper
# This wrapper executable calls the installed brew-config.sh script
#

# Path to the installed script
SCRIPT_PATH="${HOME}/bin/brew-config.sh"

# Check if the script exists
if [[ ! -f "${SCRIPT_PATH}" ]]; then
    echo "Error: brew-config.sh not found at ${SCRIPT_PATH}" >&2
    echo "Please run install.sh first to install the script." >&2
    exit 1
fi

# Execute the script with all arguments passed through
exec "${SCRIPT_PATH}" "$@"
