#!/usr/bin/env bash
#
# Homebrew Configuration Management - Configuration File
# Copy this file to config.sh and customize as needed
#

# Brewfile destination directory
# This is where the generated Brewfile will be saved
# Default: ~/Config
BREWFILE_DESTINATION="${HOME}/Config"

# Log directory
# Location where script logs will be stored
# Default: ~/.local/share/homebrew-config/logs
LOG_DIR="${HOME}/.local/share/homebrew-config/logs"

# Maximum log file size in bytes
# When a log file exceeds this size, it will be rotated
# Default: 10485760 (10MB)
MAX_LOG_SIZE=10485760

# Number of rotated log files to keep
# Older log files beyond this count will be deleted
# Default: 5
MAX_LOG_FILES=5

# Git commit enabled
# Set to true to automatically commit Brewfile changes to Git
# Set to false to skip Git operations
# Default: true
GIT_COMMIT_ENABLED=true

# Schedule pattern for launchd (used during installation)
# Options: "daily", "weekly", or a number representing seconds between runs
# Examples:
#   - "daily" runs at 2:00 AM every day
#   - "weekly" runs at 2:00 AM every Sunday
#   - "3600" runs every hour
# Default: daily
SCHEDULE_PATTERN="daily"

# Script version (do not modify)
SCRIPT_VERSION="1.0.0"
